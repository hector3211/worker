"use client";

import { Job } from "@/lib/drizzle";
import { EditButton } from "./Editjobbutton";
import { ScrollArea } from "./ui/scroll-area";
import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "./ui/table";

type TableProps = {
  jobs: Job[] | null | undefined;
};

export default function RecentJobs({ jobs }: TableProps) {
  return (
    <Table className="w-full flex flex-col">
      <TableHeader>
        <TableRow className="flex justify-between">
          <TableHead>Invoice</TableHead>
          <TableHead>Sink</TableHead>
          <TableHead>Edge</TableHead>
          <TableHead>Cutter</TableHead>
          <TableHead>Completed</TableHead>
        </TableRow>
      </TableHeader>
      <TableBody className=" h-64">
        <ScrollArea className="h-64">
          {jobs?.map((job) => (
            <TableRow key={job.invoice}>
              <TableCell className="font-medium">{job.invoice}</TableCell>
              <TableCell>{job.sink}</TableCell>
              <TableCell>{job.edge}</TableCell>
              <TableCell>{job.cutter}</TableCell>
              <TableCell>{job.completed}</TableCell>
            </TableRow>
          ))}
        </ScrollArea>
      </TableBody>
      <TableCaption>A list of your recent invoices.</TableCaption>
    </Table>
  );
}
